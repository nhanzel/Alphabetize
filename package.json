{
  "name": "alphabetize",
  "displayName": "Alphabetize",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.81.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onDebug"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": [
      {
        "type": "object",
        "title": "Alphabetize",
        "properties": {
          "alphabetize.enableSortCssOnSave": {
            "type": "boolean",
            "default": false,
            "description": "Automatically sort any CSS files that get saved by selector."
          },
          "alphabetize.enableGlobalCssSort": {
            "type": "boolean",
            "default": false,
            "description": "Sort all CSS files in the workspace when 'Save All' is triggered"
          },
          "alphabetize.enableSortProperties": {
            "type": "boolean",
            "default": false,
            "description": "Sort properties within each selector when CSS file is sorted."
          }
        }
      }
    ],
    "commands": [
      {
        "command": "extension.alphabetizeSelectedLines",
        "title": "Alphabetize Selected Lines"
      },
      {
        "command": "extension.alphabetizeCSS",
        "title": "Alphabetize CSS"
      }
    ],
    "keybindings": [
      {
        "command": "extension.alphabetizeSelectedLines",
        "key": "ctrl+shift+a",
        "mac": "cmd+shift+a",
        "when": "editorTextFocus"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorTextFocus",
          "command": "extension.alphabetizeSelectedLines",
          "group": "z_commands",
          "title": "Alphabetize Selected Lines"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.81.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3",
    "@vscode/test-electron": "^2.3.2"
  }
}
